<title>Rb's Tic-Tac-Toe!</title>
<body onload="showHideStuff()">
    <div class="board_page_container">
        <div class='title'>
            <div class='title_inards' onclick='startOver()'>Tic-Tac-Toe by MisterArebe</div>
        </div>
        <form method='post' action='/move' id='main_form'>
            <div class='board' id='board'>
                <div class='table'>
                    <%board.grid.each_with_index do |row, i|%>
                        <div class='tr'>
                            <%row.each_with_index do |v, ii|%>
                            <%if v == 'x'%>
                                <%v = "<img src='images/vegeta.png'/>"%>
                            <%elsif v == 'o'%>
                                <%v = "<img src='images/goku.png'/>"%>
                            <%else%>
                                <%v == ''%>
                            <%end%>
                                <div class='td'>
                                    <button name="tile" value='<%=i%>,<%=ii%>'><%=v%></button>
                                </div>
                            <%end%>
                        </div>
                    <%end%>
                </div>
            </div>
            <input type='hidden' id='bot_battle' value="<%=bot_bot%>">
            <input type="hidden" id='tile_size' value="<%=board.grid.size%>">
        </form>
    </div>
    <%if winner == ''%>
        <div class='modal_container' style="display:none";>
    <%else%>
        <div class='modal_container' style="display:block";>
            <div class='modal'>
                <div class='reset' id='reset'>
                    <div class='menu' onclick='startOver()'>Menu</div>
                    <div class="winner"><%=winner%></div>
                    <div class='menu' onclick='resetBoard()'>Play again?</div>
                </div>
            </div>
        </div>
    <%end%>
</body>
<script src="js/board_script.js"></script>