<title>Welcome</title>
<meta name="google-signin-client_id" content="360720873685-2ucu0h81bev0h9a26hrmttsdctv5f1ua.apps.googleusercontent.com">
<body>
    <div class="title">
        Welcome to RB's Tic-Tac-Toe!
    </div>
    <form method='post' action='/play'>
		<div class='welcome'>
			<div class="g-signin2" data-onsuccess="onSignIn" style='text-align: -webkit-center; text-align: center; margin: 10% 3% 5%;'>
				<iframe sandbox='allow-popups-to-escape-sandbox'></iframe>
			</div>
			<button type='button' class='menu' onclick="signOut()"style='text-align: center; margin: 0% 3% 10%;'>Sign out</button>
			<button class='menu'>Click Here to Play</button>
		</div>
		<input type='hidden' name='google_name' id='google_name' value=''>
    </form>
</body>
<script src="https://apis.google.com/js/platform.js" async defer>
function onSignIn(googleUser) {
	var x = document.getElementById('google_name');
	var profile = googleUser.getBasicProfile();
	console.log('ID: ' + profile.getId()); // Do not send to your backend! Use an ID token instead.
	console.log('Name: ' + profile.getName());
	x.value = `${profile.getName()}`;
    console.log('Image URL: ' + profile.getImageUrl());
    console.log('Email: ' + profile.getEmail()); // This is null if the 'email' scope is not present.
}
function signOut() {
    var auth2 = gapi.auth2.getAuthInstance();
    auth2.signOut().then(function () {
      console.log('User signed out.');
    });
}
